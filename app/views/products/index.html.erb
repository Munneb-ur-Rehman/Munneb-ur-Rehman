
<details>
<summary>My cart</summary>
<section class="product" id="product">
<div class="box-container">
<%if @cart.empty? %>
<p>your cart is empty</p>
<%else%>
<% @cart.each do |product|%>
 <div class="d-flex align-items-center mb-5" >
                  <div class="flex-shrink-0">
                    <%=image_tag(product.image, width: "150px", height: "150px")%><br>
                  </div>
                  <div class="flex-grow-1 ms-3">
                    <a href="#!" class="float-end text-black"><i class="fas fa-times"></i></a>
                    <strong>Name:</strong>
                    <%= product.name %> <br>
                   <strong>Description:</strong>
                   <%= product.description%><br>
                    <div class="d-flex align-items-center">
                        <strong>Price:</strong>
                    <%= product.price %>Rs<br>
                       </div>
                    </div>
                     </div>
                 </div>
                 <div>
                        <%= link_to 'remove from cart', remove_from_cart_path(product), method: :delete, class:"btn btn-secondary" %>
                     </div>  
                      <br><br>
  
      <div class="quantity"></div>
       <% end %>
       <% end %>
       <div >
                        <%= link_to 'remove from cart', method: :delete, class:"btn btn-secondary" %>
                     </div> 
      </section>
      </details>

<section class="product" id="product">
<div class="box-container">
 <% @products.each do |product| %>
       <div class="box">
  <%=image_tag(product.image, width: "300", height: "200")%><br>
  <strong>Name:</strong>
  <%= product.name %> <br>
  <strong>Price:</strong>
  <%= product.price %>Rs<br>
  <strong>Description:</strong>
  <%= product.description%><br>
   <span>quantity : </span>
            <input type="number" min="1" max="1000" name="quantity" value="1">
   <% if @cart.include?(product)%>
   <%=link_to 'delete from cart', remove_from_cart_path(product), method: :delete, class:"btn btn-secondary"%>
   <%else%>
   <%= link_to 'add to cart', add_to_cart_path(product.id), method: :post, class:"btn btn-secondary" %>
    <%end%>
     <%= link_to 'Show', product_path(product), class:"btn btn-info" %>
     
     
     
    
     </div>
      <% end %>
      </div>
      </section>

 
  

      

   